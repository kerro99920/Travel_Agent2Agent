# ============================================================
# SmartVoyage 环境变量配置模板
# ============================================================

# ------------------------------------------------------------
# 应用配置
# ------------------------------------------------------------
DEBUG=false
LOG_LEVEL=INFO

# ------------------------------------------------------------
# 大语言模型配置 (阿里云DashScope)
# ------------------------------------------------------------
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_API_KEY=sk-your-api-key-here
LLM_MODEL_NAME=qwen-plus
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048

# ------------------------------------------------------------
# 数据库配置 (MySQL)
# ------------------------------------------------------------
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=travel_rag
DB_POOL_SIZE=5

# ------------------------------------------------------------
# Agent服务端口配置
# ------------------------------------------------------------
WEATHER_AGENT_HOST=0.0.0.0
WEATHER_AGENT_PORT=5005

TICKET_AGENT_HOST=0.0.0.0
TICKET_AGENT_PORT=5006

ORDER_AGENT_HOST=0.0.0.0
ORDER_AGENT_PORT=5007

# ------------------------------------------------------------
# MCP服务端口配置
# ------------------------------------------------------------
WEATHER_MCP_HOST=127.0.0.1
WEATHER_MCP_PORT=8000

TICKET_MCP_HOST=127.0.0.1
TICKET_MCP_PORT=8001

ORDER_MCP_HOST=127.0.0.1
ORDER_MCP_PORT=8002

# ------------------------------------------------------------
# 外部API配置 (可选)
# ------------------------------------------------------------
# 和风天气API (https://dev.qweather.com)
QWEATHER_API_KEY=your-qweather-api-key

# Aviationstack航班API (https://aviationstack.com)
AVIATIONSTACK_API_KEY=your-aviationstack-api-key

# Ticketmaster演唱会API (https://developer.ticketmaster.com)
TICKETMASTER_API_KEY=your-ticketmaster-api-key

# ------------------------------------------------------------
# Streamlit配置
# ------------------------------------------------------------
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
